<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/purple_500"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/dialog_title"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="識別名"
                    android:layout_margin="3dp"
                    android:textSize="@dimen/normal_text_size" />

                <EditText
                    android:layout_weight="9"
                    android:id="@+id/add_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_margin="3dp"
                    android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="検索語"
                android:layout_margin="3dp"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:layout_weight="9"
                android:id="@+id/add_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/normal_text_size"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="URL"
                android:layout_margin="3dp"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:layout_weight="9"
                android:id="@+id/add_url"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/normal_text_size"
                android:text="https://"
                android:inputType="textUri" />
        </TableRow>

    </TableLayout>

    <TextView
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="center"
        android:text="@string/dialog_optional_title"
        android:textSize="@dimen/normal_text_size" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="CSSクエリ"
                android:layout_margin="3dp"
                android:textSize="@dimen/normal_text_size"  />

            <MultiAutoCompleteTextView
                android:layout_weight="9"
                android:id="@+id/add_query"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/normal_text_size"
                android:inputType="textAutoComplete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="タグ属性"
                android:layout_margin="3dp"
                android:textSize="@dimen/normal_text_size"  />

            <MultiAutoCompleteTextView
                android:layout_weight="9"
                android:id="@+id/add_tag_attr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/normal_text_size"
                android:inputType="textAutoComplete" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="通知間隔"
                android:layout_margin="3dp"
                android:textSize="@dimen/normal_text_size"  />

            <EditText
                android:layout_weight="9"
                android:id="@+id/add_interval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/normal_text_size"
                android:inputType="numberDecimal" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/item_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:text="@string/menu_add_observer"/>

        <Button
            android:id="@+id/item_insert_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:text="@string/dialog_cancel"/>

    </LinearLayout>

</LinearLayout>